package hola;

import lejos.hardware.Button;

public class inicio
{

	public static void main (String[] morsecopiado)
	{
		thefish tf = new thefish();
		String morse = "";
		String palabraMorse = tf.morsecopiado();
		
		int contador = 0;
		int tamanioPalabra = palabraMorse.length();
		while(contador < tamanioPalabra)
	    
		{
			char letra = palabraMorse.charAt(contador);
			System.out.println("letra:" + letra);
		}		
		
		System.out.println(palabraMorse);
	
		String[] codigo1 = null;
		
		codigo1[0] = ".-";		//a
		codigo1[1] = "-...";    //b
		codigo1[2] = "-.-.";   	//c
		codigo1[3] = "-..";		//d
		codigo1[4] = ".";		//e
		codigo1[5] = "..-.";    //f
		codigo1[6] = "--.";		//g
		codigo1[7] = "...."; 	//h
		codigo1[8] = "..";		//i
		codigo1[9] = ".---"; 	//j
		codigo1[10] = "-.-"; 	//k
		codigo1[11] = ".-.."; 	//l
		codigo1[12] = "--";		//m
		codigo1[13] = "-.";		//n
		codigo1[14] = "---";    //o
		codigo1[15] = ".--.";	//p
		codigo1[16] = "--.-";	//q
		codigo1[17] = ".-."; 	//r
		codigo1[18] = "..."; 	//s
		codigo1[19] = "-";		//t
		codigo1[20] = "..-";    //u
		codigo1[21] = "...-";	//v
		codigo1[22] = ".--"; 	//w
		codigo1[23] = "-..-";	//x
		codigo1[24] = "-.--";	//y
		codigo1[25] = "--..";	//z
		codigo1[26] = "-----";  //0
	
		

	
		Button.waitForAnyPress();
    }
}