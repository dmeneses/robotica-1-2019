	}
	if (letra == "1222")
	{
		letratrad = "J";
	}
	if (letra == "212")
	{
		letratrad = "K";
	}
	if (letra == "1211")
	{
		letratrad = "L";
	}
	if (letra == "22")
	{
		letratrad = "M";
	}
	if (letra == "21")
	{
