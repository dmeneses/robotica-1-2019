import lejos.hardware.Button;


public class Pruebas {

	public static void main(String[] args)
	{
		Letra letra1;
		String palabra = "";
		letra1 = new Letra();
		
		letra1.insertarletra();
		palabra = letra1.insertarletra();
		System.out.println(palabra);
		System.out.println("Siguiente");
		letra1.insertarletra();
		palabra = palabra + letra1.insertarletra();
		System.out.println(palabra);
		System.out.println("Siguiente");
		
		/*
		simbs 
		
		0 .
		1 .
		2 .
		3 
		4 -

		palabrasimbs
		
		"... -"
		*/
		
	}
	

}
