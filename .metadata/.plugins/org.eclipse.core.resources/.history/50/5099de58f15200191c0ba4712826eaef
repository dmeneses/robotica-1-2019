
public class Perro {
	//propiedades(estado)
	String nombre;
	int edad;
	String color;
	String raza;
	
	//metodos (comportamiento)
	public void hacerTrucos(char truco)
	{
		if(truco == 'v')
		{
		System.out.println("Voltereta");
		}
		else if(truco == 'm')
		{
			
			System.out.println("Hacerse al muerto");
		}
		else 
		{
			System.out.println("saltar");
		}
	}
	public void comer()
	{
		System.out.println("comiendo");
	}
	public void dormir()
	{
		System.out.println("durmiendo");
	}
	public void cavar()
	{
		System.out.println("cavando");
	}
}
