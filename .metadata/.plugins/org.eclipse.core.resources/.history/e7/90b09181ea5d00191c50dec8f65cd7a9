package afedo3;

import lejos.hardware.port.SensorPort;
import lejos.hardware.sensor.EV3ColorSensor;
import lejos.hardware.sensor.EV3TouchSensor;

public class Array 
{	
  
	Color = new EV3ColorSensor(SensorPort.S1);
	int[] angulosRojo;
	Pato robot;
	
	public Array()
	{
		robot = new Pato(2.5, 12.5);
		angulosRojo = new int[3];
		angulosRojo[0]=300;
		angulosRojo[1]=250;
		angulosRojo[2]=150;
	}
	
	public void jugar()
	{
		//recuperar el color del robot (pato)
		int color = robot.detectarColor();
		if(color == 0)//se detecto rojo
		{
			robot.girarGrados(angulosRojo[0]);
			robot.avanzarCentimetros(angulosRojo[1]);
			robot.girarGrados(angulosRojo[2]);
			robot.avanzarCentimetros(angulosRojo[1]);
            robot.girarGrados(angulosRojo[0]);
            
			
		}
	}
	

}
