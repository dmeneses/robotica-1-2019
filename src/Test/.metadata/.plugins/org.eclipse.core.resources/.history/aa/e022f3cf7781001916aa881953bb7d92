package robozumo;

public class Zumo {

		
	Acciones Wilson = new Acciones();
	 
	
	
	public void contrAtaque()
	 {
		while(true)
		{
		   System.out.println(Wilson.detectarDistancia());
			if (Wilson.detectarDistancia() <= 10)
		 {
			Wilson.RETRO ();
			Wilson.girar(300);
			Wilson.avanzar();
			
			
			
		 }
	 
		}
	 }
		public void Atacar()
		{
			
			
	    while(true)
          {
   			if (Wilson.detectarColor() <= 0.1)
			{	
			  Wilson.avanzar();
			}
			else 
			{
				Wilson.parar();
				Wilson.RETRO();
				Wilson.girar(300);
			}	
          }	
		}
		
	

}
