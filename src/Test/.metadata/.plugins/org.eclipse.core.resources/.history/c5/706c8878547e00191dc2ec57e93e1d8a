package robozumo;

public class Zumo {

		
	Acciones Wilson = new Acciones();
	
		public void Atacar()
		{
			
			
	    while(true)
          {
   			if (Wilson.detectarColor() <= 0.1)
			{	
			  Wilson.avanzar();
			}
			else 
			{
				Wilson.parar();
				Wilson.retroceder();
				Wilson.girar(360);
			}	
          }	
		}
		 
		public void contrAtaque()
		 {
			while(true)
			{
			if (Wilson.detectarDistancia() <= 10)
			 {
				Wilson.girar(360);
				Wilson.avanzar();
			 }
		 
			}
		 }
	

}
