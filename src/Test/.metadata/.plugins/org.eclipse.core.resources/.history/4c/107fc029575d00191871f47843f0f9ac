
public class Robot 
{	
	Acciones acb = new Acciones();
	
	String colorA;
	public String avisarColor()
	 {
		acb.detectarColor();
		String colorA = "";
		 
		 if(acb.detectarColor() == 3)
		 {
			 colorA = "Rojo";
		 }
		 return colorA;
	 }
	
	public void avanzarRojo()
	{
		
		int color = acb.detectarColor();
		
		if(color == 3)
		{
			
			acb.girar(34);
			acb.avanzar(30);
			acb.girar(-50);
			acb.avanzar(30);
			acb.girar(40);
			acb.avanzar(acb.detectarDistancia());
			
			
		}
	}
	 

}
