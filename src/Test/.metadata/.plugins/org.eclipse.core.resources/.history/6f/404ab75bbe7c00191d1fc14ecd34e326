package robozumo;

public class Zumo {

		
	Acciones Wilson = new Acciones();
	
	
	
	    
		public void Atacar()
		{
			Wilson.RompeTormentas(50);
			if (Wilson.detectarColor() <= 0.2)
			{	
			Wilson.avanzar(100);
			}
			else 
			{
				Wilson.girar(50);
			}	
			
		}
		 
		public void contrAtaque()
		 {
			 if (Wilson.detectarDistancia() <= 400)
			 {
				Wilson.girar(50);
				Wilson.avanzar(30);
			 }
		 }
	
		

}
