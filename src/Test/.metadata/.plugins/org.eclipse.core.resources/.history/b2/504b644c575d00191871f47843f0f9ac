	 }
	
	public void avanzarRojo()
	{
		
		int color = acb.detectarColor();
		
		if(color == 0)
		{
			
			acb.girar(34);
			acb.avanzar(30);
			acb.girar(-50);
			acb.avanzar(30);
			acb.girar(40);
			acb.avanzar(acb.detectarDistancia());
			
			
		}
	}
	 

}
