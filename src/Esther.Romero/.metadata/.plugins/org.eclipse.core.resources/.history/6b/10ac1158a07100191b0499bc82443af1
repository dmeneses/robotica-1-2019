import lejos.hardware.Button;
import lejos.hardware.port.SensorPort;
import lejos.hardware.sensor.EV3TouchSensor;
import lejos.robotics.TouchAdapter;
import lejos.utility.Delay;
import lejos.utility.Stopwatch;


public class TestPulsadores {

	public static void main(String[] args) {
		EV3TouchSensor touch = new EV3TouchSensor(SensorPort.S1);
		TouchAdapter touchAdaptador = new TouchAdapter(touch);
		Stopwatch timer= new Stopwatch();
		int tiempoDeReaccion = 0;
		char[] morse = new char [2];
		/*for(){
			
		}*/
		Delay.msDelay(300);
		while (touchAdaptador.isPressed()) {
			System.out.println("alguien esta presionando el touch");
		}
		tiempoDeReaccion = timer.elapsed();
		System.out.println("alguien esta presionando el touch");
		if(tiempoDeReaccion<=350){
			morse[0]='.';
			System.out.println(morse[0]='.');
		}
		else if(tiempoDeReaccion>=350){
			morse[0]='_';
			System.out.println(morse[0]='_');
		}
		timer.reset();
		Button.waitForAnyPress();
		while(!touchAdaptador.isPressed()){
			System.out.println("alguien esta presionando el touch");
		}
		tiempoDeReaccion = timer.elapsed();
		System.out.println("tiempoDeReaccion" + tiempoDeReaccion);
		if(tiempoDeReaccion>=1000){
			System.out.println("espacio");
		}

	}

}
