import lejos.hardware.Button;
import lejos.hardware.Sound;
import lejos.hardware.motor.EV3LargeRegulatedMotor;
import lejos.hardware.port.MotorPort;
import lejos.utility.Delay;


public class Carrito {

	public static void main(String[] args) {
		EV3LargeRegulatedMotor motorDerecho = new EV3LargeRegulatedMotor(MotorPort.B);
		EV3LargeRegulatedMotor motorIzquierdo = new EV3LargeRegulatedMotor(MotorPort.C);
		Button.LEDPattern(2);
		double distanciaAMoverme = 60; //cm
		// distanciaAMoverme = distanciaAMoverme;
		int grados = 0;
		double diametroRueda = 5.5; //cm
		double circunferencia = Math.PI* diametroRueda;
		double numeroDeRotaciones = distanciaAMoverme/circunferencia;
		grados = (int)(numeroDeRotaciones*360);
		
		System.out.println("estoy avanzando");
		Button.waitForAnyPress(4);
		Sound.beepSequence();
		
		// motorDerecho.setSpeed(500);
		// motorIzquierdo.setSpeed(500);
		int velocidad = 500;
		motorDerecho.setSpeed(velocidad);
		motorDerecho.rotate(grados, true);
		motorIzquierdo.setSpeed(velocidad);
		motorIzquierdo.rotate(grados);
		
		motorDerecho.stop();
		motorDerecho.rotate(400, true);
		
		// motorDerecho.setSpeed(500);
		
		System.out.println("estoy avanzando");
		Button.waitForAnyPress(5);
		Sound.beepSequence();
		// motorDerecho.setSpeed(500);
		// motorIzquierdo.setSpeed(500);
		motorDerecho.setSpeed(velocidad);
		motorDerecho.rotate(grados, true);
		motorIzquierdo.setSpeed(velocidad);
		motorIzquierdo.rotate(grados);
		
		motorDerecho.stop();
		motorDerecho.rotate(400, true);
		
		System.out.println("estoy avanzando");
		Button.waitForAnyPress(6);
		Sound.beepSequence();
		// motorDerecho.setSpeed(500);
		// motorIzquierdo.setSpeed(500);

		motorDerecho.setSpeed(velocidad);
		motorDerecho.rotate(grados, true);
		motorIzquierdo.setSpeed(velocidad);
		motorIzquierdo.rotate(grados);
		
		motorDerecho.stop();
		motorDerecho.rotate(400, true);
		
		Button.waitForAnyPress();
		
		System.out.println("estoy avanzando");
		Button.waitForAnyPress(7);
		Sound.beepSequence();
		// motorDerecho.setSpeed(500);
		// motorIzquierdo.setSpeed(500);
		
		motorDerecho.setSpeed(velocidad);
		motorDerecho.rotate(grados, true);
		motorIzquierdo.setSpeed(velocidad);
		motorIzquierdo.rotate(grados);
		
		System.out.println("estoy avanzando");
		Button.waitForAnyPress(8);
		Sound.beepSequence();
		Sound.beepSequenceUp();
		Sound.beepSequence();

	}

}
