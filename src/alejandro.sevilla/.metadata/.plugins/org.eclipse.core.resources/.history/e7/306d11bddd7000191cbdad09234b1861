	System.out.println("el toque duro "+ tiempoDeReaccion);
	timer.reset();
	while(!Adaptador.isPressed()){
		System.out.println(" no hay toque");
	}
	tiempoDeReaccion = timer.elapsed();
	System.out.println("no hubo toque durante  "+ tiempoDeReaccion);
	Button.waitForAnyPress();

